
#update-modal.modal-content.modal-single-input.modal.fade
	div.modal-header
		button.close(data-dismiss='modal') x
		h3 Update Record
	div.modal-body
		//- form.form-horizontal
		form.form-horizontal(method ="post",action ="/admin/products/update")
			input#updateId(type="hidden", name="product[_id]")
			.form-group
				.col-sm-5
					label(for='updateName') Product Name
					input#updateName.form-control(type='text', placeholder='Name', name="product[name]")
				.col-sm-5
					label(for='updatePrice') Price
					input#updatePrice.form-control(type='text', placeholder='0', name="product[price]")
			.form-group
				label.col-sm-10(for='updateImage') Image
				.col-sm-10
					input#updateImage.form-control(type='text', placeholder='URL', name="product[image]")
			.form-group
				label.col-sm-10(for='updateDescription') Description
				.col-sm-10
					textarea#updateDescription.form-control(type='text', placeholder='description', name="product[description]")
			button#sub-add-btn.btn.btn-default(type='submit') Submit
			button(data-dismiss="modal")#cancel.btn.btn-default Cancel
			div.alert.alert-error.hide
			button(data-dismiss="alert").close
	div.modal-footer
